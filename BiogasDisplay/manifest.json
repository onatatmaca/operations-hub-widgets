{
  "typeName": "BiogasDisplay",
  "pluginId": "BiogasDisplay",
  "category": "Custom",
  "description": {
    "title": "Biogas Plant Display",
    "overview": "Real-time biogas plant process data display with Historian integration"
  },
  "info": {
    "version": "1.0.0",
    "updated": "11/27/2024",
    "size": "15,000 bytes",
    "developer": "Custom"
  },
  "customIcon": "/custom/default/BiogasDisplay/placeholder.jpg",
  "origin": "custom",
  "placeholder": "/custom/default/BiogasDisplay/placeholder.jpg",
  "preview": "/custom/default/BiogasDisplay/preview.jpg",
  "scripts": [],
  "schema": {
    "draggable": true,
    "JSONSchema": {
      "bgaName": {
        "title": "BGA Name (Excel/JSON File)",
        "type": "string",
        "default": "Erfstadt_v1",
        "description": "Enter the name of the Excel/JSON file without extension (e.g., Erfstadt_v1)"
      },
      "liveDataHistorian": {
        "title": "Live Data Query (Historian) - For Old BGAs",
        "type": "array",
        "$ref": "#/definitions/dataSource"
      },
      "liveDataOPCUA": {
        "title": "Live Data Query (OPC UA) - For New BGAs",
        "type": "array",
        "$ref": "#/definitions/dataSource"
      },
      "historicalData": {
        "title": "Historical Data Query (Optional - Last 24h)",
        "type": "array",
        "$ref": "#/definitions/dataSource"
      },
      "locale": {
        "title": "Language/Region",
        "type": "string",
        "enum": ["DE", "US", "UK"],
        "default": "DE"
      }
    },
    "UISchema": {
      "bgaName": {
        "ui:widget": "text",
        "ui:placeholder": "Enter BGA name (e.g., Erfstadt_v1)"
      },
      "liveDataHistorian": {
        "ui:field": "dataSource",
        "ui:binding": { "multiple": ["Name", "Value", "Timestamp", "Quality"] }
      },
      "liveDataOPCUA": {
        "ui:field": "dataSource",
        "ui:binding": { "multiple": ["Name", "Value", "Timestamp", "Quality"] }
      },
      "historicalData": {
        "ui:field": "dataSource",
        "ui:binding": { "multiple": ["Name", "Value", "Timestamp", "Quality"] }
      },
      "locale": {
        "ui:widget": "select"
      }
    }
  }
}
